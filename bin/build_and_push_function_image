#!/usr/bin/env bash

# create function image and
# push to ECR repository

set -e

directory_name=$1

if [[ -z "$directory_name" ]]; then
    echo "valid image name required:"
    echo ""
    ls -li lambda | awk '{print $NF}' | tail -n +2
    echo ""
    exit 0
fi

account_id=$(aws sts get-caller-identity --query Account --output text)

aws ecr get-login-password \
    --region us-east-1 | \
    docker login \
    --username AWS \
    --password-stdin ${account_id}.dkr.ecr.us-east-1.amazonaws.com

image_name=$(python3 ./bin/helpers/rename_resource.py ${directory_name})

tag=${image_name}:latest

docker build \
    --build-arg FUNCTION_NAME=${directory_name} \
    --platform linux/arm64 \
    --tag ${tag} .

target_image=${account_id}.dkr.ecr.us-east-1.amazonaws.com/${tag}

docker tag ${image_name} ${target_image}

docker push ${target_image}
